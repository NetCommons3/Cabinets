{
    "name": "netcommons/cabinets",
    "description": "Cabinets for NetCommons Plugin",
    "homepage": "http://www.netcommons.org/",
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakephp/cakephp":              "~2.6",
        "cakephp/debug_kit":            "~2.2",
        "cakedc/migrations":            "~2.2",
        "components/jquery":            "~2.1",
        "phpunit/phpunit":              "~3.7.38",
        "sebastian/phpcpd":             "~2.0",
        "twbs/bootstrap":               "~3.1"
    },
    "require-dev": {
        "mustangostang/spyc":           "dev-master",
        "netcommons/categories":        "dev-master",
        "netcommons/workflow":          "dev-master",
        "netcommons/content-comments":  "dev-master",
        "netcommons/likes":             "dev-master",
        "netcommons/net-commons":       "dev-master",
        "netcommons/tags":              "dev-master",
        "satooshi/php-coveralls":       "dev-master"
    },
    "license": "NetCommons License",
    "authors": [
        {
          "name": "Ryuji AMANO (RYUS INC.)",
          "email": "ryuji@ryus.co.jp",
          "homepage": "http://ryus.co.jp/",
          "role": "Developer"
        },
        {
            "name": "NetCommons Community",
            "homepage": "https://github.com/NetCommons3/Cabinets/graphs/contributors"
        }
    ],
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "cabinets"],
    "config": {
        "vendor-dir": "vendors"
    }
}

